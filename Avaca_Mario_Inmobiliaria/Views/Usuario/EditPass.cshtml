@model Avaca_Mario_Inmobiliaria.ModelsAux.UsuarioPassEdit

@{
    ViewData["Title"] = "EditPass";
    Usuario u = (Usuario)ViewBag.Usuario;
}

<h1>Editar Contraseña</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPass" asp-route-id="@u.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PassVieja" class="control-label"></label>
                <input asp-for="PassVieja" class="form-control" />
                <span asp-validation-for="PassVieja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NuevaPass" class="control-label"></label>
                <input asp-for="NuevaPass" class="form-control" />
                <span asp-validation-for="NuevaPass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cambiar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la Lista</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
