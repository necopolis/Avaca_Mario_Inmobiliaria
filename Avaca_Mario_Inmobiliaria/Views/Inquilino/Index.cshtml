@model IEnumerable<Avaca_Mario_Inmobiliaria.Models.Inquilino>

@{
    ViewData["Title"] = "Lista Inquilinos";
}

<h1>Lista Inquilino</h1>

<p>
    <a class="btn btn-outline-dark" asp-action="Create">Crear Inquilino</a>
</p>
<table class="table" id="tablaId">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DNI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activo)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DNI)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Activo)
                </td>
                <td>
                    @if (item.Activo || User.IsInRole("Administrador")) {
                   @*<i class="fas fa-edit"></i>*@ @Html.ActionLink("Editar", "Edit", new { id = item.Id });
                        
                     }|
                @*<i class="fas fa-info-square"></i>*@ @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |

                    @if (item.Activo || User.IsInRole("Administrador"))
                    { @*<i class="fas fa-trash-alt"></i>*@ @Html.ActionLink("Eliminar", "Delete", new { id = item.Id });
                    }


                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    @{await Html.RenderPartialAsync("_Table");}

}