@model Avaca_Mario_Inmobiliaria.Models.Pago

@{
    ViewData["Title"] = "Editar Pago";
    var Id = ViewBag.Id;
    string hoy = DateTime.Now.ToString("yyyy-MM-dd");
}

<h1>Editar</h1>

<h4>Pago</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FechaPago" class="control-label"></label>
                <input asp-for="FechaPago" min=@hoy class="form-control" />
                <span asp-validation-for="FechaPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Importe" class="control-label"></label>
                <input asp-for="Importe"  min="0" class="form-control" />
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index">Regresar a la lista</a>
</div>
<br />
<div>
    <a class="btn btn-outline-dark" asp-action="Delete" asp-route-id="@Id" class="btn btn-danger">Anular Pago</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
