@model Avaca_Mario_Inmobiliaria.Models.Pago

@{
    ViewData["Title"] = "Eliminar Pago";
}

<h1>Elimiar</h1>

<h3>Esta seguro de elimianr este pago? No podra volver atras</h3>
<div>
    <h4>Pago</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroPago)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumeroPago)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaPago)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaPago)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Importe)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Importe)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ContratoId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ContratoId)
        </dd>
    </dl>
    
    <form asp-action="Delete" onsubmit="return confirmacion()">
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a class="btn btn-outline-dark" asp-action="Index">Regresar a la Lista</a>
    </form>
</div>

